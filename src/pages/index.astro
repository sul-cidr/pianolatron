---
import BaseLayout from "../layouts/base.astro";
import LoadingSpinner from "../ui-components/LoadingSpinner.svelte";
import Pianolatron from "../Pianolatron.svelte";
import StanfordHeader from "../layouts/stanfordHeader.astro";
import StanfordSubheader from "../layouts/stanfordSubheader.astro";
---

<BaseLayout title="Pianolatron" theme="blue">
  <LoadingSpinner
    showLoadingSpinner={true}
    loadingSpinnerText="Loading application..."
  />
  <StanfordHeader />
  <StanfordSubheader />
  <Pianolatron client:only="svelte" mode="listen" />
</BaseLayout>
